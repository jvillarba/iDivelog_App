<!DOCTYPE html>
<html>
<head>
  <title>DivelogApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>

  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><strong>SCUBA<strong> online logbook</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/dives"><span class="glyphicon glyphicon-home"></span> Dive Log</a></li>
        <li><a href="/places"><span class="glyphicon glyphicon-globe"></span> Dive Sites</a></li>
        <li><a href="/users"><span class="glyphicon glyphicon-user"></span> Users</a></li>
        <li>
          <% if logged_in? %>
            <%= link_to 'Logout', logout_path,:class=>' glyphicon glyphicon-remove' %>
          <% else %>
            <%= link_to 'Login', new_session_path,:class=>' glyphicon glyphicon-ok' %>
          <% end %> </li>

      </ul>
    </div>
  </nav>

  <% if flash[:success] %>
    <div class="alert alert-success"><%= flash[:success] %> </div>
    <% elsif flash[:failure] %>
    <div class="alert alert-danger"><%= flash[:failure] %> </div>
  <% end %>

<script> $('.alert').delay(2000).slideUp() </script>

<%= yield %>

</body>
</html>
