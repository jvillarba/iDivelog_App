<h1><center>ADD NEW DIVE SITE</center></h1>

<%= form_for @place do |f| %>
  <div>
    <%= f.label :city, 'City' %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :sites, 'Site' %>
    <%= f.text_field :sites %>
  </div>

  <div>
    <%= f.submit "Add new site" %>
  </div>
<% end %>
